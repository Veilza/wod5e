<form class="{{cssClass}} flexcol limited" autocomplete="off">
    {{!-- Sheet Header --}}
    <header class="limited-actor-header">
        <div style="flex-grow: 0;">
            <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" width="100"
                alt="Profile Image" />
        </div>
        <div style="flex-grow: 1;">
            <h2 class="limited-charname">{{actor.name}}</h2>
        </div>
    </header>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{#ifeq actor.type "spc"}}
            <div class="tab appearance description-content">
                <div class="flex-center">
                    <label class="resource-label"><h2>{{localize "WOD5E.Tabs.Notes"}}</h2></label>
                </div>                  
                <prose-mirror name="system.notes" data-document-u-u-i-d="{{../actor.uuid}}" value="{{actor.system.notes}}" toggled="true">
                    {{{enrichedNotes}}}
                </prose-mirror>
            </div>
        {{else}}
            <div class="grid grid-2col flexrow">                    
                <div class="tab appearance description-content">
                    <div class="flex-center">
                        <label class="resource-label"><h2>{{localize "WOD5E.BiographyList.Label"}}</h2></label>
                    </div>              
                    <prose-mirror name="system.biography" data-document-u-u-i-d="{{../actor.uuid}}" value="{{actor.system.biography}}" toggled="true">
                        {{{enrichedBiography}}}
                    </prose-mirror>
                </div>              
                <div class="tab appearance description-content">
                    <div class="flex-center">
                        <label class="resource-label"><h2>{{localize "WOD5E.BiographyList.Appearance"}}</h2></label>
                    </div>              
                    <prose-mirror name="system.appearance" data-document-u-u-i-d="{{../actor.uuid}}" value="{{actor.system.appearance}}" toggled="true">
                        {{{enrichedAppearance}}}
                    </prose-mirror>
                </div>
            </div>
        {{/ifeq}}
    </section>
</form>
